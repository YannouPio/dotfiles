// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": true,

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "base_keymap": "VSCode",

  "ui_font_size": 17,
  "buffer_font_size": 18,

  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "agent": {
    "version": "2",
    "enabled": true,
    "dock": "left"
  },
  "features": {
    "edit_prediction_provider": "none"
  },

  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "git_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "right"
  },

  "chat_panel": {
    "dock": "left"
  }
}
